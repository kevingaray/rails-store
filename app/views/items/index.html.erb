<h1>Items listing page</h1>

<table>
	<thead>
		<tr>
			<th>Item</th>
			<th>Price</th>
			<th>Stock</th>
      <th>Likes</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item|%>
			<tr>
				<td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.stock %></td>
        <td><%= item.likes.count %> <%= (item.likes.count) == 1 ? 'Like' : 'Likes'%></td>
			</tr>
		<% end %>
	</tbody>
</table>
