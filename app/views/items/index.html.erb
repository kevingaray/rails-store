<h1>Items listing page</h1>

<table class="table">
	<thead>
		<tr>
			<th scope="col">id</th>
			<th scope="col">Item</th>
			<th scope="col">Price</th>
			<th scope="col">Stock</th>
			<th scope="col">View</th>
			<th scope="col">Edit</th>
      <th scope="col">Delete</th>
      <th scope="col">Likes</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item|%>
			<tr>
				<th><%= item.id %></th>
				<td><%= item.name %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.stock %></td>
				<td><%= link_to "View", item_path(item), class: "btn btn-outline-success" %></td>
				<td><%= link_to "Edit", edit_item_path(item), class: "btn btn-primary" %></td>
        <td><%= link_to "Delete", item_path(item), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
        <td><%= item.likes.count %> <%= (item.likes.count) == 1 ? 'Like' : 'Likes'%></td>
			</tr>
		<% end %>
	</tbody>
</table>
