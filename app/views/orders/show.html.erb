<h2 class="text-center mt-4">Order # <%= @order.id %></h2>
<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-8 mt-4">
			<div class="card text-center shadow mb-5 bg-white rounded">
				<div class="card-body">
        
          <div class="card-text text-left">
            <p><strong>Customer:</strong> <%=@order.user.first_name %> </p>
          </div>

          <div class="card-text text-left">
            <p><strong>Items:</strong></p>
            <% total = 0 %>
            <ul>
            <% @order.line_items.each do |line_item| %>
              <li>
                <%= line_item.quantity %> x <%= line_item.item.name %> = <%= number_to_currency(decorate(line_item).total_price) %>
              </li>
                <% total += decorate(line_item).total_price %>
            <% end %>
            </ul>
          </div>

          <div class="card-text text-left">
          <p><strong>Total:</strong> <%= number_to_currency(total) %></p>
          </div>

          <div class="card-text text-left">
          <p><strong>Accepted:</strong> <%= @order.accepted%></p>
          </div>

          <div class="card-text text-left">
          <p><strong>Date:</strong> <%= @order.created_at%></p>
          </div>

          <%= render "comments/comments", obj: @order %>
          <%= render "comments/form", obj: @order %>
          
				</div>
			</div>
		</div>
	</div>
</div>